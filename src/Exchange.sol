contract exchange is ReentrancyGuard {
    event NtTransfer(
        address indexed _from,
        address indexed _to,
        uint256 _amount
    );
    event NanoTransfer(
        address indexed _from,
        address indexed _to,
        uint256 _nanoGen,
        uint256 _amount,
        bytes _data
    );

    INanoGen public nanoGenContract;
    NTCoin public ntCoinContract;

    address public approver;
    address public owner;

    uint256 public feeRate;
    uint256 public nanoToNt;
    uint256 public constant decimals = 10 ** 18;

    struct UserInfo {
        uint256 id;
        address user;
        uint256 payNtAmount;
        uint256 getNanoAmount;
        uint256 remainNtAmount;
        uint256 timestamp;
    }

    mapping(address => uint256) public userIds;
    mapping(address => mapping(uint256 => UserInfo)) private userinfos;
    mapping(address => uint256[]) private accountHasAllIdAmounts;

    error ErrorMsg(string message);
    error ParameterError(uint256 arg, string message);

    constructor(
        address _ntCoinContract,
        address _nanoGenContract,
        address _approver
    ) {
        ntCoinContract = NTCoin(_ntCoinContract);
        nanoGenContract = INanoGen(_nanoGenContract);
        approver = _approver;
        owner = msg.sender;

        nanoToNt = 100 * decimals;
    }

    modifier onlyOwner() {
        require(msg.sender == owner, "not the owner");
        _;
    }

    function flash(uint256 _nanoAmount) external nonReentrant {
        if (_nanoAmount <= 0) {
            revert ErrorMsg("nano amount not less than zero.");
        }

        if (nanoToNt <= 0) {
            revert ErrorMsg("nanoToNt amount not less than zero.");
        }

        uint256 nanoGenId = 0;
        uint256 ntReserve;

        userIds[msg.sender]++;
        uint256 userId = userIds[msg.sender];

        UserInfo storage newUserInfo = userinfos[msg.sender][userId];

        accountHasAllIdAmounts[msg.sender].push(userId);

        if (feeRate == 0) {
            ntReserve = _nanoAmount * nanoToNt;
        } else {
            ntReserve = (_nanoAmount * nanoToNt * feeRate) / decimals;
        }

        ntCoinContract.transferFrom(msg.sender, address(this), ntReserve);
        nanoGenContract.safeTransferFrom(
            approver,
            msg.sender,
            nanoGenId,
            _nanoAmount,
            ""
        );

        uint256 nt_bal = ntCoinContract.balanceOf(msg.sender);

        newUserInfo.user = msg.sender;
        newUserInfo.id = userId;
        newUserInfo.payNtAmount = ntReserve;
        newUserInfo.getNanoAmount = _nanoAmount;
        newUserInfo.remainNtAmount = nt_bal;
        newUserInfo.timestamp = block.timestamp;

        emit NtTransfer(msg.sender, address(this), ntReserve);
        emit NanoTransfer(approver, msg.sender, nanoGenId, _nanoAmount, "");
    }

    function getUserInfo(
        address _account,
        uint256 _id
    )
        public
        view
        returns (
            uint256 id,
            address user,
            uint256 payNtAmount,
            uint256 getNanoAmount,
            uint256 remainNtAmount,
            uint256 timestamp
        )
    {
        if (_id <= 0) {
            revert ParameterError(_id, "Invalid stake ID");
        }

        UserInfo storage newUserInfo = userinfos[_account][_id];

        return (
            newUserInfo.id,
            newUserInfo.user,
            newUserInfo.payNtAmount,
            newUserInfo.getNanoAmount,
            newUserInfo.remainNtAmount,
            newUserInfo.timestamp
        );
    }

    function getAllExchangeRecordsForUser(
        address user
    ) external view returns (UserInfo[] memory) {
        uint256[] memory ids = accountHasAllIdAmounts[user];
        UserInfo[] memory records = new UserInfo[](ids.length);

        for (uint256 i = 0; i < ids.length; i++) {
            uint256 id = ids[i];
            (
                ,
                ,
                uint payNtAmount,
                uint256 getNanoAmount,
                uint256 remainNtAmount,
                uint256 timestamp
            ) = getUserInfo(user, id);

            records[i] = UserInfo({
                id: id,
                user: user,
                payNtAmount: payNtAmount,
                getNanoAmount: getNanoAmount,
                remainNtAmount: remainNtAmount,
                timestamp: timestamp
            });
        }

        return records;
    }

    function setApprover(address _approver) external onlyOwner nonReentrant {
        if (_approver == address(0x0)) {
            revert ErrorMsg("_approver not be 0x0 address");
        }

        approver = _approver;
    }

    function setOwner(address _owner) external onlyOwner nonReentrant {
        if (_owner == address(0x0)) {
            revert ErrorMsg("_owner not be 0x0 address");
        }
        owner = _owner;
    }

    function setFeeRate(uint256 _feeRate) external onlyOwner nonReentrant {
        feeRate = _feeRate;
    }

    function setNanoToNt(uint256 _amount) external onlyOwner nonReentrant {
        if (_amount == 0) {
            revert ErrorMsg("_amount not be zero");
        }
        nanoToNt = _amount;
    }

    function emergencyWithdrawAll() external onlyOwner nonReentrant {
        ntCoinContract.transfer(
            msg.sender,
            ntCoinContract.balanceOf(address(this))
        );
    }

    function nanoToNtAmount(uint256 amount) external view returns (uint256) {
        if (feeRate == 0) {
            return amount * nanoToNt;
        } else {
            return (amount * nanoToNt * feeRate) / decimals;
        }
    }

    function remainNanoGen() external view returns (uint256) {
        return nanoGenContract.balanceOf(approver, 0);
    }
}
